# Example environment variables for vistaran-help-desk
# Copy this file to .env and update values before starting in production

PORT=5000
REALTIME_PORT=4001
NODE_ENV=production

# JWT and secrets
JWT_SECRET=replace-with-a-strong-secret

# SMTP (if you use email features)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# FRONTEND URL used for CORS
FRONTEND_URL=http://localhost:5173
